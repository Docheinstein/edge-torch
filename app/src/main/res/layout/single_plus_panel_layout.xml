<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272727">

    <TextView
            android:id="@+id/flashlightUnavailableText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/flash_unavailable"
            android:textAlignment="center"
            android:textSize="18sp"
            android:visibility="gone" />

    <ImageView
            android:id="@+id/flashlightOn"
            android:layout_width="@dimen/torch_button_size"
            android:layout_height="@dimen/torch_button_size"
            android:layout_centerInParent="true"
            android:padding="@dimen/torch_button_padding"
            android:src="@drawable/torch_on"
            android:tint="@color/torchOn" />

    <ImageView
            android:id="@+id/flashlightOff"
            android:layout_width="@dimen/torch_button_size"
            android:layout_height="@dimen/torch_button_size"
            android:layout_centerInParent="true"
            android:padding="@dimen/torch_button_padding"
            android:src="@drawable/torch_off"
            android:tint="@color/torchOff" />

</RelativeLayout>